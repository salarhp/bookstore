<h2>add new book</h2>
<%= form_for @book do |f| %>
	<div class = "from-group">
		<%= f.label :title %><br/>
		<%= f.text_field :title ,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :isbn %><br/>
		<%= f.text_field :isbn ,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :category %><br/>
		<%= f.select :category_id,Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'select one'} ,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :author %><br/>
		<%= f.select :author_id,Author.all.collect {|x| [x.first_name+' '+x.last_name, x.id]}, {:include_blank => 'select one'} ,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :publisher %><br/>
		<%= f.select :publisher_id,Publisher.all.collect {|x| [x.name, x.id]}, {:include_blank => 'select one'} ,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :format %><br/>
		<%= f.text_field :format,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :excerpt %><br/>
		<%= f.text_area :excerpt,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :pages %><br/>
		<%= f.number_field :pages,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :price %><br/>
		<%= f.text_field :price,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :buy %><br/>
		<%= f.text_field :buy,class: 'form-control'%><br/>
	</div>
	<div class = "from-group">
		<%= f.label :year %><br/>
		<%= f.text_field :year,class: 'form-control'%><br/>
	</div>
	<%= f.submit "submit", class:'btn btn-primary' %>
	<%= link_to "cancel", categories_path, class:'btn btn-default' %>

<% end %>
